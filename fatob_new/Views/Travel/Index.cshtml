@model IEnumerable<Travel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach(var item in Model){
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="/img/csm_eb24002_58f4fb61dd.jpg" alt="Bus Picture">
                        <div class="card-body">
                            <p class="card-text">From @item.StartCity To @item.EndCity</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Travel" asp-action="TravelDetail" asp-route-id="@item.TravelId">View</a>
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Travel" asp-action="Edit" asp-route-id="@item.TravelId">Edit</a>
                                    <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Travel" asp-action="Delete" asp-route-id="@item.TravelId">Delete</a>
                                </div>
                                <small class="text-muted">@item.EndOfTravel.DayOfWeek, @item.EndOfTravel.Day/@item.EndOfTravel.Month/@item.EndOfTravel.Year</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>