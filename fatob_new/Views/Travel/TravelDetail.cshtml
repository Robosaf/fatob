@model Travel





<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Your Travel</h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center">
                        <img src="/img/csm_eb24002_58f4fb61dd.jpg" class="img-responsive" height=350px width=500px>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Travel description</h4>
                    <p>Lorem Ipsum available,but the majority have suffered alteration in some form,by injected humour,or randomised words which don't look even slightly believable.but the majority have suffered alteration in some form,by injected humour</p>
                    <h2 class="mt-5">
                        @Model.Cost zł
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <i class="fa fa-shopping-cart">
                        </i>
                    </button>
                    <a class="btn btn-primary btn-rounded" asp-controller="BuyTicket" asp-action="Index" asp-route-id="@Model.TravelId">Buy Now</a>
                    <h3 class="box-title mt-5">From @Model.StartCity To @Model.EndCity with:</h3>
                    <ul class="list-unstyled">
                        <li>
                            <i class="fa fa-check text-success">
                            </i>Comfortable seats
                        </li>
                        <li>
                            <i class="fa fa-check text-success">
                            </i>Toilet
                        </li>
                        <li>
                            <i class="fa fa-check text-success">
                            </i>Wi-Fi
                        </li>
                    </ul>
                </div><div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Address we start</td>
                                    <td>Main Station @Model.StartCity</td>
                                </tr>
                                <tr>
                                    <td>Address we end</td>
                                    <td>Main Station @Model.EndCity</td>
                                </tr>
                                <tr>
                                    <td>Time we start</td>

                                    <td>@Model.StartOfTravel.DayOfWeek, @Model.StartOfTravel.Hour:@Model.StartOfTravel.Minute</td>
                                </tr>
                                <tr>
                                    <td>Time we end</td>
                                    <td>@Model.EndOfTravel.DayOfWeek, @Model.EndOfTravel.Hour:@Model.EndOfTravel.Minute</td>
                                </tr>
                                <tr>
                                    <td>Bus Color</td>
                                    <td>@Model.Bus.Color</td>
                                </tr>
                                <tr>
                                    <td>Registration Number</td>
                                    <td>@Model.Bus.RegisterNumber</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



